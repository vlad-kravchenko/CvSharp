<Window x:Class="LeafArea.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeafArea"
        mc:Ignorable="d"
        Title="Enter etalon area" Height="100" Width="200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Name="Area" Grid.Row="0" Margin="5" PreviewTextInput="Area_PreviewTextInput" KeyDown="Area_KeyDown"></TextBox>
        <Button Name="OK" Grid.Row="1" Margin="5" Click="OK_Click">OK</Button>
    </Grid>
</Window>
